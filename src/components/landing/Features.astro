---
import features from "../../configs/features.json";
---

<section>
    <h1 class="text-center | font-bold | text-5xl | my-5">Features</h1>
    <div class="grid | md:grid-cols-3 | gap-4 | p-4">
        {
            features.map((feature) => (
                   <div class="bg-slate-800 | p-10 | rounded-xl">
                        <h2 class="text-3xl | font-bold | my-4">{feature.title}</h2>
                        <p class="">{feature.description}</p>
                    </div>
                )
            )
        }
    </div>
</section>
